<%- include('layout.ejs')  %>

<body>
<br>
  <div class="button-container">
    <form action="/producto" method="get">
      <button type="submit" class="list">Lista de Productos</button>
    </form>
  </div>
    <br>
<h1 class="list-cat">Lista de Categorias</h1>
<br>
  <h2>Categor√≠as</h2>
<br>
  <form action="/producto/add_categoria" method="get">
    <button type="submit" class="list">Agregar categoria</button>
  </form>
  <br>
  <table class="user">
    <thead>
      <tr>
        <th class="user-cat">id</th>
        <th class="user-cat">Categoria</th> 
        <th class="user-cat">Editar</th>
        <th class="user-cat">Borrar</th>
      </tr>
    </thead>
    <tbody>
      <% for (var i=0; i<categorias.length; i++) { %>
        
        <tr>
          <td class="i"><%= categorias[i].idCategoria %></td>
          <td class="i"><%= categorias[i].descCategoria %></td>
          
          <td>
          <a href="/update_categoria/<%= categorias[i].idCategoria %>" class="add">Editar</a>
          </td>
          <td>
          <a href="/categoria/<%= categorias[i].idCategoria %>" class="delete">Borrar</a>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</body>